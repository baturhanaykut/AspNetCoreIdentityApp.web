
@{
    ViewData["Title"] = "UserList";
}
@model List<AdminModel.UserViewModel>

<h1>Üye Liste</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Roller</th>
            <th>Role İşlemleri</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    <user-role-names user-id="@item.Id"></user-role-names>
                </td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Roles" asp-action="AssingRoleToUser" asp-route-id="@item.Id">Role Ata</a>
                </td>
            </tr>
        }
    </tbody>
</table>